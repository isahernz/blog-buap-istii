---
import Date from "./Date.astro";

interface Props {
  title: string;
  image: string;
  gallery: string[];
  date: string;
  category: string;
  url: string;
}

const { title, image, gallery, date, category, url } = Astro.props;
---

<article class="rounded-lg bg-white shadow-md md:flex">
  <img
    src={image}
    alt="Cultura"
    class="h-60 w-60 rounded object-cover transition hover:scale-110"
  />

  <div class="flex flex-col gap-2 p-8">
    <a href={`/news/${url}`}>
      <h3
        transition:name={`title-${url}`}
        class="text-pretty text-xl font-semibold hover:underline"
      >
        {title}
      </h3>
    </a>
    <Date date={date} />
  </div>
</article>
