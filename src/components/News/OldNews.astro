---
import HeadlineCard from "./HeadlineCard.astro";
import news from "@/data/news.json";
---

<div class="rounded-lg bg-gray-100 p-6">
  <h3 class="mb-4 text-xl font-semibold">Noticias Anteriores</h3>
  <ul class="space-y-4">
    {
      news
        .slice(0, 5)
        .map(({ title, date }) => <HeadlineCard title={title} date={date} />)
    }
  </ul>
</div>
